<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_window_place_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000">



    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.yhy.ampoverlaydemo.customview.InforWindowTriangleView
            android:visibility="gone"
            android:id="@+id/infowindow_trainle"
            android:layout_width="345dp"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:background="@drawable/info_window_mine_trans"
            android:id="@+id/infowindow_place_bg"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="7.5dp"
            android:layout_marginTop="15dp"
            >
            <!--<ImageView-->
            <!--android:id="@+id/badge"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:src="@drawable/badge_wa">-->
            <!--</ImageView>-->
            <!--<ImageView-->
            <!--android:id="@+id/badge2"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:src="@drawable/badge_wa">-->
            <!--</ImageView>-->

            <LinearLayout
                android:id="@+id/ll_palce_text"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="80dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/establish_dog_park_time"
                            />
                        <TextView
                            android:id="@+id/info_week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="13sp"
                            android:textColor="#ffffff"
                            android:text="星期一到星期六 晚19：00-20：30"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/establish_dog_park_info_logo"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="13sp"
                            android:text="小型犬居多"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/dog_park_location"
                            />
                        <TextView
                            android:id="@+id/info_surround"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="13sp"
                            android:textColor="#ffffff"
                            android:text="兴顺街北四路附近（鑫丰馨园西门）"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/dog_park_detil_find_error1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:visibility="visible"
                        android:id="@+id/iv_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/establish_dog_park_find_error"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"/>
                    <LinearLayout
                        android:id="@+id/ll_find_place_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/iv_error"
                        android:layout_marginTop="5dp"
                        android:layout_centerInParent="true"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:src="@mipmap/establish_dog_park_find_error_book"/>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26px"
                            android:text="纠错"
                            android:textColor="#ffffff"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/info_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/person_list"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:id="@+id/info_line_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_one"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_man"
                        android:layout_marginRight="10dp"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_two"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_woman"
                        android:layout_marginRight="10dp"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_three"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_man"
                        android:layout_marginRight="10dp"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_four"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_woman"
                        android:layout_marginRight="10dp"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_five"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_man"
                        android:layout_marginRight="10dp"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_six"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_woman"
                        android:layout_marginRight="10dp"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_seven"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_man"
                        android:layout_marginRight="10dp"

                        />
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/info_line_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_eight"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/test_woman"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_nine"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_man"
                        android:layout_marginRight="10dp"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_ten"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_woman"
                        android:layout_marginRight="10dp"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_eleven"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_man"
                        android:layout_marginRight="10dp"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_twleve"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_woman"
                        android:layout_marginRight="10dp"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_thirteen"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_man"
                        android:layout_marginRight="10dp"

                        />
                    <com.yhy.ampoverlaydemo.customview.CircleImageView
                        android:id="@+id/info_window_cir_fourteenth"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:src="@mipmap/test_woman"
                        android:layout_marginRight="10dp"

                        />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/info_line_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#ff000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/snippet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#ff7f7f7f"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>




</LinearLayout>